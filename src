create database f1_store;
use f1_store;

create table mini_capacetes (
id_minicapacete int auto_increment primary key,
escuderia varchar(100),
piloto_1 varchar(100),
piloto_2 varchar(100),
descricao text
);

insert into mini_capacetes (escuderia, piloto_1, piloto_2) values
("red bull", "max verstappen ", "liam lawson"),
("ferrari", "charles leclerc", "lewis hamilton"),
("mercedes", "kimi antonelli", "george russel"),
("aston martin", "fernando alonso", "lance stroll"),
("haas", "ollie bearman", "esteban ocon"),
